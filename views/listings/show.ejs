<% layout('/layouts/boilerplate') %>
<body>
    <div class="row show-main">
        <div class="col-8 offset-3">
            <h3>Listings Details</h3>
        </div>
            <div class="card col-6 offset-3 mt-4 show-card">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b>
                    <ul>
                        <li><%= listing.description %></li>
                        <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li> <!-- Rupee Symbol + Convert price in this format 2,000 -->
                        <li><%= listing.location %></li>
                        <li><%= listing.country %></li>
                    </ul>
                </p>
                </div>
            </div>
            
            <div class="btns">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary col-md-1 offset-3 edit-btn">Edit </a>

                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-primary offset-5 edit">Delete</button>
                    </form>
            </div>
    </div>
</body>